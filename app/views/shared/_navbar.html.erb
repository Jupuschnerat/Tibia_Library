<div class="navbar navbar-expand-sm navbar-light navbar-library">
  <div class="container-fluid">
    <%= link_to "#", class: "navbar-brand" do %>
      <%= image_tag("tibialibrary.png") %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "BOSSES", bosses_path %>
          </li>
          <li class="nav-item">
            <%= link_to "GROUPS", groups_path %>
          </li>
          <li class="nav-item">
            <% if @server_id %>
              <%= link_to "NEW GROUP", new_server_group_path(@server_id) %>
            <% else %>
              <% render 'groups/new_group_form' %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "MY GROUPS", server_group_path(@server_id, @id) %>
          </li>
          <li class="nav-item-divider"></li>
          <li class="nav-item">
            <span class="my-profile">
              <%= link_to "MY PROFILE", user_path(@id), class: "box" %>
            </span>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
      <% if user_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <%= link_to "SIGN OUT", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link signout" %>
          </li>
          <li class="nav-item">
            <%= link_to user_path(@id) do %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "Profile Avatar" %>
            <% end %>
          </li>
        </ul>
      <% end %>
    </div>
  </div>
</div>

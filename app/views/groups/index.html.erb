<!-- app/views/groups/index.html.erb -->
<h1>My Groups</h1>
<ul>
  <% current_user.groups.each do |group| %>
    <li>
      <%= link_to group.name, group %>
      <ul>
        <% group.bosses.each do |boss| %>
          <li><%= boss.name %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
